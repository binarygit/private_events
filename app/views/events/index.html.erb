<div>
  <h1>Finished Events</h1>
  <% unless @finished_events.empty? %>
    <% @finished_events.each do |event| %>
      <ul>
        <li><%= event.name %>, on: <%= event.date %></li>
      </ul>
    <% end %>
  <% else %>
    <p>No finished events to show</p>
  <% end %>
</div>


<div>
  <h1>Upcoming Events</h1>
  <% unless @upcoming_events.empty? %>
    <% @upcoming_events.each do |event| %>
      <ul>
        <li>
          <%= event.name %>, 
          created_by: <%= event.creator.name %>, 
          on: <%= event.date %>, 
          total_attendees: <%= event.attendees.count %>

          <% unless event.attendees.include?(current_user) || !logged_in? %>
            <button>
            <%= link_to 'attend', new_event_attendance_path(event_id: event[:id]) %>
            </button>
          <% end %>
        </li>
      </ul>
    <% end %>
  <% else %>
    <p>No upcoming events to show</p>
  <% end %>
</div>
